---
architecture: M1
cluster_name: pemdemo
cluster_tags: {}

cluster_vars:
  edb_repositories:
  - enterprise
  postgres_flavour: epas
  postgres_version: '15'
  failover_manager: efm
  enable_pg_backup_api: true
  yum_repository_list:
  - EPEL
  extra_postgres_packages:
    common:
    - edb-as15-server-edb_wait_states
    - edb-as15-server-sqlprofiler
    - edb-as15-server-indexadvisor
  postgres_extensions:
  - edb_wait_states
  - sql_profiler
  - index_advisor
  preload_extensions:
  - edb_wait_states
  - sql-profiler
  - index_advisor
  postgres_conf_settings:
    wal_level: replica
    max_wal_senders: 10
    wal_keep_size: 500
    max_replication_slots: 10
  postgres_users:
  - username: dba
    generate_password: true
    role_attrs:
    - superuser
    - replication
    postgres_hba_settings:
    - host all all 0.0.0.0/0 scram-sha-256

instance_defaults:
  image: tpa/rocky:8
  platform: docker
  vars:
    ansible_user: root

instances:
- Name: pg1
  node: 1
  role:
  - primary
  - pem-agent  
  backup: barman
  exposed_ports: 
  - 5444
  published_ports:
  - 5444:5444

- Name: pg2
  node: 2
  role:
  - replica
  - pem-agent
  upstream: pg1

- Name: pemserver
  node: 3
  role:
  - pem-server
  exposed_ports: 
  - 443
  published_ports:
  - 443:443

- Name: barman
  location: main
  node: 4
  role:
  - barman
  - log-server
  - monitoring-server
  - pem-agent
  - efm-witness
